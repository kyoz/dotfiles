#!/bin/sh

dwmbar_fan() {
  LEFT=$(sensors | awk '/Left side/ {printf $4}')
  RIGHT=$(sensors | awk '/Right side/ {printf $4}')

  if [[ ! -z $LEFT ]] && [[ ! -z $RIGHT ]]; then
    printf "%sïœ %s/%s" "$DWMBAR_SEPERATOR" "$LEFT" "$RIGHT" > $DWMBAR_FAN
  else
    printf "" > $DWMBAR_FAN
  fi
}

if [ -z $1 ]; then
  dwmbar_fan
else
  while true
  do
    dwmbar_fan
    sleep $1
  done
fi
